{
  "compilerOptions": {
    "target": "ES2020",
     "noImplicitAny": false,
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
